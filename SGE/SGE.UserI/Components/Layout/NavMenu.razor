@using SGE.Aplicacion
@inject ServicioUsuarioEstado logeado

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Proyecto SGE</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="expedientesfinal">
                <span class="bi bi-folder-fill" aria-hidden="true"></span> Expedientes
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tramitesfinal">
                <span class="bi bi-file-earmark-text-fill" aria-hidden="true"></span> Tramites
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="usuario">
                <span class="bi bi-person-fill" aria-hidden="true"></span> Usuario
            </NavLink>
        </div>

        @if (logeado.Usuario?.permisos.Contains(Permiso.adminPermiso) == true)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="gestion-usuarios">
                    <span class="bi bi-people-fill" aria-hidden="true"></span> Gestión de Usuarios
                </NavLink>
            </div>
        }
    </nav>
</div>