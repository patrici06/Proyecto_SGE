}

@if (visible)
{
    <div>
        <h3>Lista de Trámites</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Contenido</th>
                    <th>Fecha de Creación</th>
                    <th>Fecha de Última Modificación</th>
                    <th>Expediente</th>
                    <th>Usuario que Modificó</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tramite in tramites)
                {
                    <tr>
                        <td>@tramite.Id</td>
                        <td>@tramite.Contenido</td>
                        <td>@tramite.FechaHoraCreacion.ToShortDateString()</td>
                        <td>@tramite.FechaHoraUltimaModificacion.ToShortDateString()</td>
                        <td>@tramite.ExpedienteId</td>
                        <td>@tramite.IdUsuario</td>
                        <td>
                            @if (permisoElim)
                            {
                                <button class="btn btn-danger btn-sm" @onclick="() => EliminarTramite(tramite)">Eliminar</button>
                            }
                            @if (permisoMod)
                            {
                                <button class="btn btn-primary btn-sm" @onclick="() => ModificarTramite(tramite)">Modificar</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}